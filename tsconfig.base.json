{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@banshop/core/api/service": ["libs/core/api/service/src/index.ts"],
      "@banshop/core/environments/service": ["libs/core/environments/service/src/index.ts"],
      "@banshop/core/forms/mask": ["libs/core/forms/mask/src/index.ts"],
      "@banshop/core/platform/service": ["libs/core/platform/service/src/index.ts"],
      "@banshop/core/storage/common": ["libs/core/storage/common/src/index.ts"],
      "@banshop/core/storage/local": ["libs/core/storage/local/src/index.ts"],
      "@banshop/core/storage/memory": ["libs/core/storage/memory/src/index.ts"],
      "@banshop/core/storage/session": ["libs/core/storage/session/src/index.ts"],
      "@banshop/core/testing": ["libs/core/testing/src/index.ts"],
      "@banshop/core/utils/destroy": ["libs/core/utils/destroy/src/index.ts"],
      "@banshop/products/api": ["libs/products/api/src/index.ts"],
      "@banshop/products/common": ["libs/products/common/src/index.ts"],
      "@banshop/products/state": ["libs/products/state/src/index.ts"],
      "@banshop/russian/home/page": ["libs/russian/home/page/src/index.ts"],
      "@banshop/russian/localization": ["libs/russian/localization/src/index.ts"],
      "@banshop/ui/layout": ["libs/ui/layout/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
